<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".ProfileList">

    <TextView
        android:id="@+id/name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/name_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未設定"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/age_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Age"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/age_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未設定"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/gender_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Gender"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gender_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未設定"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/address_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Address"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/address_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未設定"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/roots_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Roots"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/roots_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未設定"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/finaleducation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="FinalEducation"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/finaleducation_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未設定"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/office_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Office"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/office_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未設定"
        android:textSize="30sp" />

</LinearLayout>